<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:CardView="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/doodle"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"

    tools:context="com.crypticsocket.hoggers.Main2Activity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restaurant Choices"
        android:id="@+id/restaurantChoices"
        android:textSize="35sp"
        android:gravity="center"
        android:textColor="#fff"
        />
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_marginLeft="16dp"

    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:layout_height="175sp"
    CardView:cardCornerRadius="30dp">
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/b_JB"
        android:background="@drawable/juiceberg"
        android:padding="18dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:gravity="center"
        android:onClick="toMenu"
        android:textColor="#fff"
        android:text="@string/juice_berg"
        android:textSize="25sp" />

</android.support.v7.widget.CardView>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    CardView:cardCornerRadius="3dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:layout_height="175sp">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/b_MC"
            android:background="@drawable/madouk_cafe"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:padding="18dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="toMenu"
            android:text="Madouk Cafe"
            android:textSize="25sp" />
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="175sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        CardView:cardCornerRadius="3dp">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/b_DC"
            android:background="@drawable/dosa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:onClick="toMenu"
            android:text="@string/dc"
            android:textSize="25sp" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="175sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        CardView:cardCornerRadius="3dp">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/b_ex1"
           android:background="@drawable/teashop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="toMenu"
            android:text="Tea Shop"
            android:textColor="#fff"
            android:textSize="25sp" />
    </android.support.v7.widget.CardView>
    </LinearLayout>
